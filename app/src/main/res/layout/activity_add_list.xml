<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".AddListActivity"
    android:id="@+id/drawLayout">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/judul_textview"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:theme="@style/EditTextTheme"/>
            <EditText
                android:id="@+id/isi_textview"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/tuliskan_note_agenda"
                android:gravity="top"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:theme="@style/EditTextTheme"/>
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/checked"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:onClick="btSimpan"
            tools:ignore="ContentDescription,RtlHardcoded" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_star_priority"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_star_border_black_24dp"
                tools:ignore="ContentDescription"
                android:onClick="clickStar"/>
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/calendar"
                android:layout_marginStart="20dp"
                android:onClick="btProjek"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/label"
                android:layout_marginStart="20dp"
                android:onClick="btLabel"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/clip"
                android:onClick="btClip"
                tools:ignore="ContentDescription,RtlHardcoded" />
        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_add_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/profile_handler">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>